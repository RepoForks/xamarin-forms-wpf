<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:Xamarin.Forms.Platform.WPF.Converters">
    <conv:ModelToViewConverter x:Key="ModelToViewConverter"/>
    <DataTemplate x:Key="ModelTemplate">
        <UserControl Content="{Binding Converter={StaticResource ModelToViewConverter}}" />
    </DataTemplate>
</ResourceDictionary>